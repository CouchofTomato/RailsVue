<li>
  <%= comment.body %> -
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.email %></small>

	 	<div class="text-center">
		  <% if current_user.id == comment.user_id %>
			  <%= link_to "Delete", comment, class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
        <%= link_to 'Edit', [:edit, comment.commentable, @comment], class: "btn btn-success" %>
			<% end %>
		</div>

    <%= form_for [comment, Comment.new] do |f| %>
      <%= f.text_area :body, placeholder: "Add a Reply" %><br/>
      <%= f.submit "Reply"  %>
    <% end %>

  <ul>@
      <%= render partial: 'comments/comment', collection: comment.comments %>
  </ul>

</li>